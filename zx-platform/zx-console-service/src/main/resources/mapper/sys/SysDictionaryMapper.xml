<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zx.share.platform.console.mapper.sys.SysDictionaryMapper">
    <resultMap id="baseResultMap" type="com.zx.share.platform.bean.sys.SysDictionary">
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="type" property="type"/>
        <result column="code" property="code"/>
        <result column="name" property="name"/>
        <result column="value" property="value"/>
        <result column="parent_id" property="parentId"/>
        <result column="create_time" property="createTime"/>
    </resultMap>
    <!-- 查询出全部未删除的后台用户管理数据 -->
    <select id="selectPage" resultMap="baseResultMap">
        SELECT id,type,code,name,value,parent_id FROM sys_dictionary WHERE 1=1
        <if test="query!=null and query!=''">
            AND name like #{query,jdbcType=VARCHAR}
        </if>
        <if test="type!=null and type!=''">
            AND type = #{type,jdbcType=VARCHAR}
        </if>
        <if test="parentId!=null and parentId!=''">
            AND parent_id =#{parentId,jdbcType=BIGINT}
        </if>
        limit #{limit},#{pageSize}
    </select>

    <select id="selectPageCount" resultType="java.lang.Integer">
        SELECT COUNT(*) FROM sys_dictionary WHERE 1=1
        <if test="query!=null and query!=''">
            AND name like #{query,jdbcType=VARCHAR}
        </if>
        <if test="type!=null and type!=''">
            AND type = #{type,jdbcType=VARCHAR}
        </if>
        <if test="parentId!=null and parentId!=''">
            AND parent_id =#{parentId,jdbcType=BIGINT}
        </if>
    </select>

</mapper>