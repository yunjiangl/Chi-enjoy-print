<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zx.share.platform.wechat.mapper.ImMapper">

    <resultMap id="baseResultMap" type="com.zx.share.platform.vo.user.ImResponseBean">
        <result column="user_code" property="userCode"/>
        <result column="chat_user_code" property="attorneyCode"/>
        <result column="chat_time" property="time"/>
    </resultMap>

    <select id="page" resultMap="baseResultMap" parameterType="com.zx.share.platform.vo.user.ImRequestBean">
        SELECT chat.user_code,chat.chat_user_code,DATE_FORMAT(chat.chat_time,'%Y-%m-%d') chat_time FROM t_user_chat chat
        <where>
            <if test="userType!=null and userType==2">
                <if test="userCode!=null and userCode!=''">
                    AND chat.chat_user_code=#{userCode}
                </if>
            </if>
            <if test="userType!=null and userType==1">
                <if test="userCode!=null and userCode!=''">
                    AND chat.user_code=#{userCode}
                </if>
            </if>
        </where>
        ORDER BY chat.chat_time DESC
        limit #{currentSize},#{pageSize}
    </select>

    <select id="pageCount" resultType="java.lang.Integer" parameterType="com.zx.share.platform.vo.user.ImRequestBean">
        SELECT count(1) FROM t_user_chat chat
        <where>

            <if test="userType!=null and userType==2">
                <if test="userCode!=null and userCode!=''">
                    AND chat.chat_user_code=#{userCode}
                </if>
            </if>
            <if test="userType!=null and userType==1">
                <if test="userCode!=null and userCode!=''">
                    AND chat.user_code=#{userCode}
                </if>
            </if>

        </where>
    </select>
    <insert id="insertMsg" parameterType="com.zx.share.platform.bean.zx.UserChatMsg">
        INSERT INTO t_user_chat_msg(user_id,user_code,chat_user_id,chat_user_code,chat_time,msg)
        VALUES (
        #{userId},
        #{userCode},
        #{chatUserId},
        #{chatUserCode},
        #{chatTime},
        #{msg}
        )

    </insert>

    <update id="updateChatTime">
        UPDATE t_user_chat SET chat_time=now() WHERE user_code=#{userCode} AND chat_user_code=#{chatUserCode}
    </update>
</mapper>