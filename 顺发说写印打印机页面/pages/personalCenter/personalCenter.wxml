<!--container start  -->
<view class='container'>
  <!--top start  -->
    <view class='top'>
        
        <!--left start  -->
        <view class='left'>

          <view class='header-photo'><image src='{{details.portrait}}' /></view>

          <view class='name-vip'>
            <view>{{details.nickName}}</view>
            <view class='vip'>{{details.userType === 1 ? '普通用户' : '律师'}}</view>
          </view>

        </view>
        <!--left end  -->

        <!-- right start  -->
        <!--improvingPersonalData 完善个人资料  -->
          <view bindtap='ImprovingPersonalData' class='right'><image src='../images/pen.png' /></view>
        <!--right end  -->

    </view>
  <!--top end  -->

  <!--center start  -->
    <view class='center'>

      <!--list start  -->
        <view class='list-until' bindtap='how'>

            <view class='question'>
              <view><image src='../images/question.png' /></view>
              <view class='how'>如何使用</view>
            </view>
            
            <view class='go'> > </view>

        </view>
      <!--list end  -->

            <view class='line'></view>

      <!--list start  -->
        <view class='list-until'>

            <view class='question'>
              <view><image src='../images/delete.png' /></view>
              <view class='how'>清除缓存</view>
            </view>
            
            <view class='go font'> <text style='font-family: "微软雅黑"; font-size: 14px;'> 30.00M</text> > </view>

        </view>
      <!--list end  -->      

    </view>
  <!--center end  -->

  <!--footer start  -->
    <view class='footer'>
      <view class='fr'>
        <button type="default" size="{{defaultSize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="logout" hover-class="other-button-hover"> 退出登录 </button>
      </view>  
    </view>
  <!--footer end  -->

</view>
<!--container end  -->