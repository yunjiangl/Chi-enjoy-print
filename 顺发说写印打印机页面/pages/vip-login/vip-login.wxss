page{  
  height: 100%;  
}   
.container {  
  height: 100%;  
  display: flex;  
  flex-direction: column;  
  padding: 0;  
  box-sizing: border-box;  
  background-color: #f2f2f2  
}   
  
/*登录图片*/  
.login-icon{  
  flex: none;  
}  
.login-img{  
  width: 750rpx;  
}  
  
/*表单内容*/  
.login-from {  
  margin-top: 100px;  
  flex: auto;  
  height:100%;  
}  
  
.inputView {   
  line-height: 44px;  
}  

  
.loginLab {  
  margin: 15px 15px 15px 10px;  
  color: #333;  
  font-size: 16px  
}  
.loginLab font{
  margin-left: 21px;
}
.inputText {  
  flex: block;  
  float: right;  
  text-align: left;  
  margin-right: 22px;  
  margin-top: 11px;  
  color: #999;  
  font-size: 14px  
  
}  
  
.line {  
  width: 100%;  
  height: 1px;  
  background-color: #e0e0e0;  
  margin-top: 1px;  
}  
/*按钮*/  
.loginBtnView {  
  width: 100%;  
  height: auto;  
  margin-top: 0px;  
  margin-bottom: 0px;  
  padding-bottom: 0px;  
}  
.lbv{
  margin-top: 80px;
}
.loginBtn {  
  width: 100%;  
  color: #fff;
  margin-top: 30px;  
}
.loginBtn[type="primary"] {  
  width: 100%;  
  margin-top: 30px; 
  margin-bottom: 30px;
  background: #3798FB;
}

.login-wx{
  color: #333;
  border: none;
}
.login-wx::after{
  border: 2px solid #e0e0e0;
}
.a{
  margin-top: 10px;
}
.zhuce{
  margin-top: 10px;
  float: left;
  font-size: 14px;
  color: #666;
}
.forget{
  float: right;
  margin-top: 10px;
  font-size: 14px;
  color: #3798FB;
}