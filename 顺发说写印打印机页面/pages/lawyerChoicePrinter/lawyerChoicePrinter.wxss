page{
  background: #f5f5f5;
}
.container{
  padding: 0px;
  width: 100%;
  height: 100%;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  color: #333;
  font-size: 28rpx;
  background: #fff;  
  border-bottom: 1px solid #e0e0e0;
}
.choice{
  display: flex;
  justify-content: space-between;
  padding: 20px;
}
.number{
  margin-top: 5px;
  color: #999;
}
button[type=primary]{
  color: #fff;
  background: #3798fb;
  margin-right: 15px;
}
.button-hover{
  background: #3798fb;
}
.button::after{
  border: none;
}
button[type='default']{
  color: #3798fb;
  border: 1px solid #3798fb; 
}

.line{
  height: 1px;
  background: #e0e0e0;
  margin-left: 20px;
}