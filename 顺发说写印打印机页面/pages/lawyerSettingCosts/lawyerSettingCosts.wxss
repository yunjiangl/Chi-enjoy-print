page{
  background: #f5f5f5;
}
.container{
  height: 100%;
  width: 100%;
  box-sizing: border-box;
  justify-content: space-between;
  align-items: center;
  color: #333;
  padding: 0px;
}
.top{
  justify-content: space-between;
  background: #fff;
  line-height: 25px;
   padding: 40rpx 0 20rpx 40rpx; 
  border-bottom: 1px solid #e0e0e0;
}
.address{
  font-size: 24rpx;
  color: #999;
}
.content{
  background: #fff;
  border-top: 1px solid #e0e0e0;
  border-bottom: 1px solid #e0e0e0;
  margin-top: 40rpx;
  
}
.list{
  display: flex;
  margin: 20rpx 0;
   padding: 0 40rpx; 
  justify-content: space-between;
}
.a4{
  color: #999;
}
.line{
  height: 1px;
  background: #e0e0e0;
   margin:  40rpx 0px 40rpx 40rpx; 
}
.update{
  display: flex;
  font-size: 60rpx;
  font-family: "楷体";
  color: #3798fb;
}
.minus,.add{
  border: 4rpx solid #3798fb;
  padding: 0 30rpx;
}
.minus{
  border-radius: 10rpx 0 0 10rpx;
  border-right: none;
}
.add{
  border-radius: 0 10rpx 10rpx 0;
}
.radio{
  font-size: 28rpx;
  margin-left: 60rpx; 
  display: inline-block;
  color: #666;
}
radio .wx-radio-input{
  border-radius:50%;
  width:30rpx;
  height:30rpx;
}
.input-radio{
  float: left;
  margin-top: 20rpx;
}
.settingCosts{
  justify-content: space-between;
  display: flex;
  background: #fff;
  margin-top: 40rpx;
  line-height: 80rpx;
  padding: 0 40rpx;
}
.settingCosts input{
  width: 120rpx;
  margin-top: 18rpx;
}
.footer{
  display: flex;
  margin: 100rpx 0 40rpx 0;
}
.footer button{
  width: 90%;
}
.costs{
  display: flex;
  justify-content: space-between;
}
button[type='default']{
  color: #fff;
  background: #3798fb;
}