<!--container start  -->
  <view class='container'>
    
    <!--top start  -->
      <view class='top' bindtap='getPrinterCode'>
         <view>
            <view>打印机位置</view>
          </view>
        <view class='address'>{{printerAddress}}</view>
      </view>
    <!--top end  -->

    <!--content start  -->
      <view class='content'>

      <!-- list start  -->
        <view class='list'>

          <view class='font'>纸张</view>
          <view class='a4'>A4</view>

        </view>
      <!-- list end  -->

        <view class='line'></view>

      <!-- list start  -->
        <view class='list'>

          <view class='font'>范围</view>
          <view class='a4 update'>
              
              <view class='minus' bindtap='minus'>-</view>
              <view>{{printerNum}}</view>
              <view class='add' bindtap='add'>+</view>

          </view>

        </view>
      <!-- list end  -->

        <view class='line'></view> 

      <!-- list start  -->
        <view class='list'>

          <view class='font'>单双面</view>
              
            <view class='double'> 
                <radio-group class="radio-group" bindchange="usageChange">
                  <view class='input-radio'>
                    <label class="radio" wx:for="{{items1}}">
                        <radio color='#3798FB' value="{{item.name}}" checked="{{item.checked}}"/>{{item.value}}
                    </label>
                  </view>
                </radio-group>
            </view>

        </view>
      <!-- list end  -->

        <view class='line'></view>

      <!-- list start  -->
        <view class='list'>

          <view class='font'>颜色</view>
              
            <view class='double'> 
                <radio-group class="radio-group" bindchange="colcorChange">
                  <view class='input-radio'>
                    <label class="radio" wx:for="{{items3}}">
                        <radio color='#3798FB' value="{{item.name}}" checked="{{item.checked}}"/>{{item.value}}
                    </label>
                  </view>
                </radio-group>
            </view>

        </view>
      <!-- list end  -->

        <view class='line'></view>     

      <!-- list start  -->
        <view class='list'>

          <view class='font'>范围</view>
          <view class='a4'>所有页面(共{{order.printerNum}}页)</view>

        </view>
      <!-- list end  -->        

      </view>
    <!--content end  -->

    <!-- settingCosts start -->
      <view class='settingCosts'>
        <label>设置打印服务费</label>
        <label class='costs'><label><input type='number' bindinput='serviceAmout' placeholder='输入费用'></input></label><label class='m'>￥</label></label>
      </view>
    <!-- settingCosts end -->

    <!--footer start  -->
      <view class='footer'>
          <button type='default' size='default' hover-class="other-button-hover" bindtap='showModal'>确定发送</button>
      </view>
    <!--footer end  -->

  </view>
<!--container end  -->