page{  
  height: 100%;  
}   
.container {  
  height: 100%;  
  display: flex;  
  flex-direction: column;  
  padding: 0;  
  box-sizing: border-box;  
}   
.top-font{
  margin-top: 50px;
  color: #999;
  font-size: 16px;
}
/*登录图片*/  
.login-icon{  
  flex: none;  
}  
.login-img{  
  width: 750rpx;  
}  
  
/*表单内容*/  
.login-from {  
  margin-top: 50px;  
  flex: auto;  
  height:100%;  
}  
  
.inputView {  
  line-height: 44px;  
}  
/*输入框*/  
.nameImage, .keyImage {    
  width: 14px;  
  height: 14px  
}  
  
.loginLab {  
  margin: 15px 15px 15px 10px;  
  color: #333;
  width: 100px;
  font-size: 14px  
}  
.loginLab tt{
  margin-left: 7px;
}
.loginLab font{
  margin-left: 28px;
}
.inputText {  
  flex: block;  
  float: right;  
  text-align: left;  
  margin-right: 22px;   
  margin-top: 11px;  
  color: #999;  
  font-size: 14px  
  
}  
  
.line {  
  width: 100%;  
  height: 1px;  
  background-color: #cccccc;  
  margin-top: 1px;  
}  
/*按钮*/  
.loginBtnView {  
  width: 100%;  
  height: auto;   
  margin-top: 0px;  
  margin-bottom: 0px;  
  padding-bottom: 0px;  
}  
  
.loginBtn[type="primary"] {  
  width: 100%;  
  margin-top: 30px; 
  margin-bottom: 30px;
  background: #3798FB;
} 
.login-wx{
  color: #333;
}
.login-wx::after{
  border: 2px solid #e0e0e0;
}
 
.radio{
  display: inline-block;
 font-size: 14px;
 margin-top: 20px;
 margin-right: 60px;
 color: #666;
}

.checkbox{
  font-size: 14px;
  display: inline-block;
  margin-top: 40px;
  color: #666;
}
.xieyi{
  display: inline-block;
  color: #3798FB;
}
