page{
  background: #f5f5f5;
}
.container{
  padding: 0px;
  width: 100%;
  height: 100%;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  color: #333;
  margin-top: -20px;
}
.message{
  margin-top: 20px;
  padding-top: 20px;
  background: #fff;
}
.owner{
  margin: 0 20px;
}
.date{
  color: #999;
  font-size: 12px;
  margin-top: 10px;
}
.line{
  height: 1px;
  background: #e0e0e0;
  margin: 10px 0 10px 20px;
}
.btn{
  display: flex;
  justify-content: space-between;
  margin-right: 10px;
}
.btn button{
  margin: 0 10px 5px 10px;
}
 button[type='primary']{
  color: #fff;
  background: #3798fb;
} 
button[type='default']{
  color: #3798fb;
  border: 1px solid #3798fb;
}
.button-hover{
  background: #3798fb;
}
.button::after{
  border: none;
}