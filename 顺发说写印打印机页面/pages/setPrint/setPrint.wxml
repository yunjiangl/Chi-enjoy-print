<!--container start  -->
  <view class='container'>
    
    <!--top start  -->
      <view class='top' bindtap='getPrinterCode'>
         <view class='lt'>
            <text>{{printerAddress}}</text>
          </view>
        <view class='rt'> > </view>
      </view>
    <!--top end  -->

    <!--content start  -->
      <view class='content'>

      <!-- list start  -->
        <view class='list'>

          <view class='font'>纸张</view>
          <view class='a4'>A4</view>

        </view>
      <!-- list end  -->

        <view class='line'></view>

      <!-- list start  -->
        <view class='list'>

          <view class='font'>份数</view>
          <view class='a4 update'>
              
              <view class='minus' bindtap='minus'>-</view>
              <text>{{printerNum}}</text>
              <view class='add' bindtap='add'>+</view>

          </view>

        </view>
      <!-- list end  -->

        <view class='line'></view> 

      <!-- list start  -->
        <view class='list'>

          <view class='font'>单双面</view>
              
            <view class='double'> 
                <radio-group class="radio-group" bindchange="radioChange">
                  <view class='input-radio'>
                    <label class="radio" wx:for="{{items1}}">
                        <radio color='#3798FB' value="{{item.name}}" checked="{{item.checked}}"/>{{item.value}}
                    </label>
                  </view>
                </radio-group>
            </view>

        </view>
      <!-- list end  -->

        <view class='line'></view>

      <!-- list start  -->
        <view class='list'>

          <view class='font'>单双面</view>
              
            <view class='double'> 
                <radio-group class="radio-group" bindchange="radioChange">
                  <view class='input-radio'>
                    <label class="radio" wx:for="{{items3}}">
                        <radio color='#3798FB' value="{{item.name}}" checked="{{item.checked}}"/>{{item.value}}
                    </label>
                  </view>
                </radio-group>
            </view>

        </view>
      <!-- list end  -->

        <view class='line'></view>     

      <!-- list start  -->
        <view class='list'>

          <view class='font'>纸张</view>
          <view class='a4'>所有页面(共{{order.printerNum}}页)</view>

        </view>
      <!-- list end  -->        

      </view>
    <!--content end  -->

    <!--footer start  -->
      <view class='footer'>

        <view class='total'>
        <text>合计</text>
        <text>{{order.printerNum}}页共计<text style='color:#f00;'>{{orderAmout}}元</text></text>
        </view>

        <view class='finish' bindtap='finish'>
          <text>确认打印</text>
        </view>

      </view>
    <!--footer end  -->

  </view>
<!--container end  -->