  <view class='login-form'>

      <!--账号-->  
      <view class="inputView">  
          <label class="loginLab">密<tt></tt>码 :</label>  
          <input class="inputText it" placeholder="请输入手机号" bindinput="phoneInput" />  
      </view>  

          <view class="line"></view> 

