page{  
  height: 100%;  
}   
.container {  
  height: 100%;  
  display: flex;  
  flex-direction: column;  
  margin-top: 50px;
  padding: 0;  
  box-sizing: border-box;  
} 
/*表单内容*/  
.login-from {  
  margin-top: 50px;  
  flex: auto;  
  height:100%;  
}  
.inputView {  
  line-height: 44px;  
} 
.inputView tt{
  margin: 0 14px 0 14px;
}
.loginLab {  
  margin: 15px 15px 15px 10px;  
  color: #333;
  width: 100px;
  font-size: 14px  
}
.inputText {  
  flex: block;  
  float: right;  
  text-align: left;  
  margin-right: 22px;   
  margin-top: 11px;  
  color: #999;  
  font-size: 14px  
  
}  
.line {  
  width: 100%;  
  height: 1px;  
  background-color: #cccccc;  
  margin-top: 1px;  
}  
/*按钮*/  
.loginBtnView {  
  width: 100%;  
  height: auto;   
  margin-top: 0px;  
  margin-bottom: 0px;  
  padding-bottom: 0px;  
}  
  
.loginBtn[type="primary"] {  
  width: 100%;  
  margin-top: 30px; 
  margin-bottom: 30px;
  background: #3798FB;
}
