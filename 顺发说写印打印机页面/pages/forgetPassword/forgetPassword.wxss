page{  
  height: 100%; 
}   
.container {  
  height: 100%;  
  flex-direction: column;  
  padding: 0;  
  box-sizing: border-box;  
} 
.login-form {  
  margin: 30px 20px 0 20px;
  flex: auto;  
  height:100%;  
}  
.inputView {  
  line-height: 44px;  
  display: flex;
}   
.loginLab {  
  color: #333;
  font-size: 14px;
  margin-right: 5px;
}  
.inputText {  
  flex: block;  
  text-align: left;  
  margin-right: 22px;   
  margin-top: 11px;  
  color: #999;  
  font-size: 14px  
}  
.btn-left{
  display: flex;
} 
.itt{
  width: 70px;
}
.iv{
  justify-content: space-between;
}
 .btn-psw{
  color: #666;
  margin-top: 10px;
} 
.line {  
  width: 100%;  
  height: 1px;  
  background-color: #cccccc;  
  margin: 1px 0;  
}  
button[size="mini"] {
display:inline-block;
font-size:12px;
padding:3px 0px;
width: 90px;
height: 30px;
}
.loginBtn[type="primary"] {  
  width: 100%;  
  margin-top: 30px; 
  margin-bottom: 0px;
  background: #3798FB;
}