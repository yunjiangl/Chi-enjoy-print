page{
  background: #f5f5f5;
}
.container{
  width: 100%;
  height: 100%;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0px;
  align-items: center;
  font-size: 14px;
  color: #333;
}
.top{
  background: #fff;
  width: 100%;
  height: 100%;
  padding: 10px 0;
  border-bottom: 1px solid #e0e0e0;
}
.li{
  display: flex;
  margin-left: 20px;
  line-height: 50px;
}
.input{
  margin: 15px 20px 0 20px;
  width: 80%;
  background: #0f0;
}
.it{
  margin: -10px 0 10px 20px;
}
.radio{
  font-size: 14px;
  margin-right: 30px;
  display: inline-block;
  color: #666;
}
radio .wx-radio-input{
  border-radius:50%;
  width:15px;
  height:15px;
  margin-right: 10px;

}
.input-radio{
  float: left;
  margin-top: 10px;
}
.line{
  height: 1px;
  background: #e0e0e0;
  margin-left: 20px;
}
.center{
  background: #fff;
  margin-top: 20px;
  border: 1px solid #e0e0e0;
  border-right: none;
  border-left: none;
  height: 150px;
}
.li2{
  display: flex;
  margin-left: 20px;
  line-height: 50px;
}
.center-font,.address{
  margin-right: 20px;
}
.center-input{
  margin-top: 14px;
  width: 70%;
}
.footer{
  margin:  80px 20px 0 20px;
}
button[type="default"] {
color:#fff;
background-color:#3798fb;
}
/*三级联动  */

.infoText{
    margin-top: 20rpx;
    width: 100%;
    justify-content: center; 
    color: #888;
    min-height: 1rem;
}
.li3{
  line-height: 2rem;
}
.animation-element-wrapper picker-view{
  background-color: white; 
  padding: 0;
  width: 100%; 
  height: 380rpx;
  bottom: 0;
  position: fixed;
}

.animation-element-wrapper picker-view-column view{
  vertical-align:middle; 
  font-size: 28rpx;
  line-height: 28rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* ----------------------------------------- */

.animation-element-wrapper {
  display: flex;  
  position: fixed;
  left: 0;
  top:0;
  height: 100%;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 12;
}
.animation-element {
  display: flex;
  position: fixed;
  width: 100%;
  height: 470rpx;
  bottom: 0;
  background-color: rgba(255, 255, 255, 1);
  z-index: 22222;
}

.animation-button {
  margin-top: 20rpx;
  top:20rpx;
  width: 400rpx;
  height: 100rpx; 
  line-height: 100rpx; 
  align-items:center;
}
text{
  color: #999999;
  display: inline-flex;  
  position: fixed;
  margin-top: 20rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  font-size: 34rpx;
  font-family: Arial, Helvetica, sans-serif;
}

.left-bt{
  left: 30rpx;
}
.right-bt {
  right: 30rpx;
}

.animation-element-wrapper .line{
  display: block;
  position: fixed;
  height: 1rpx;
  width: 100%;
  margin-top: 89rpx; 
  background-color: #eeeeee;
}