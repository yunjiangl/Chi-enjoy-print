page{
  background: #f5f5f5;
  height: 100%;
}
.container{
  padding: 0px;
  box-sizing: border-box;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 100%;
  color: #333;
}
.top{
  background: #fff;
  line-height: 40px;
  display: flex;
  justify-content: space-between;
  width: 100%;
  border-bottom: 1px solid #e0e0e0;
}
.search image{
  width: 18px;
  height: 18px;
  margin: 8px 5px 0 15px;
}
.search{
  overflow: hidden;
  margin: 10px 10px 10px 10px;  
  border-radius: 20px;
  border: none;
  width: 100%;
  font-size: 12px;
  line-height: 50px;
  text-align: center;
  background: #f5f5f5;
  display: flex;
}
.input{
  margin: 5px 0 8px 5px;
  width: 100%;
  text-align: left;
  height: 5px;
}
.content{
  background: #fff;
}
.titleTop{
  border-bottom: 1px solid #e0e0e0;
  line-height: 40px;
  flex-direction: row;
  display: flex;
  font-size: 14px;
  text-align: center;
}
.titleTop .item{
  width: 30%;
  position: relative;
  margin: 0 5px;
}
.titleTop .item.active{
  color: #3798fb;
}
.titleTop .item.active::after{
  content: '';
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: #3798fb;
}
.list{
  display: flex;
}

/*民事案由  */

.listTitle{
  display: flex;
  flex-direction: column;
  width: 35%;
  text-align: center;
  background: #f5f5f5;
}
.item2{
  background: #f5f5f5;
  border: 1px solid #e0e0e0;
  color: #333;
  border-left: none;
  border-top: none;
  text-align: center;
  display: block;
  padding: 20px 10px;
}
.item2.active{
  color: #3798fb;
  border-right: none;
  background: #fff;
}
.item2.active::after{
  content: '';
  display: block;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
}
.right{
  margin: 20px 0 0 10px;
}
.listUntil text{
  display: block;
  line-height: 30px;
}
.xingshi{
  background: #f00;
}
/*刑事罪名  */
.titleAccusation,.Administration{
  width: 100%;
  padding-left: 20px;
  border-bottom: 1px solid #e0e0e0;
  border-right: 1px solid #e0e0e0;
}
.titleAccusation text,.Administration text{
  display: block;
  margin: 20px 0;
}
.line{
  height: 1px;
  background: #e0e0e0;
  margin: 5px 0;
}