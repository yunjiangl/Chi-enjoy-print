<!--map start  -->
<view class='map'>

      <map id="map" longitude="113.324520" latitude="23.099994" scale="14" controls="{{controls}}" bindcontroltap="controltap" markers="{{markers}}" bindmarkertap="markertap" polyline="{{polyline}}" bindregionchange="regionchange" show-location style="width: 100%; height: 92vh;"></map>

    <!-- btn start  -->
        <view class='btn'>
          <button type='default' bindtap='actionSheetTap'>附件</button>
           
        <action-sheet hidden="{{actionSheetHidden}}" bindchange="actionSheetbindchange">

          <block wx:for-items="{{actionSheetItems}}" style="z-index:50;">
              <action-sheet-item bindtap="bind{{item.bindtap}}">{{item.txt}}</action-sheet-item>
          </block>

            <action-sheet-cancel class="cancel">取消</action-sheet-cancel>

        </action-sheet>

     </view>
    <!-- btn end  -->

</view>
<!--map end  -->