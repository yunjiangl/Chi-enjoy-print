page{
  height: 100%;
}
.container{
  height: 100%;
  flex-direction: column;
  padding: 20px;
  box-sizing: border-box;
}
.login-form{
  margin-top: 50px;
  flex: auto;
}
.inputView {  
  line-height: 44px;
  overflow: hidden;
  float: left;
} 
.loginLab {  
  color: #333;
  font-size: 14px;
  margin-right: 15px;
} 
.inputText {  
  flex: block;  
  text-align: left;  
  margin-left: 20px;  
  margin-top: 10px;  
  color: #999;  
  font-size: 14px  
} 
.phone{
  display: flex;
}
.it{
  text-align: left;
}
.btn-right{
  float: right;
}
.line {  
  width: 100%;  
  height: 1px;  
  background-color: #cccccc;  
  margin-top: 6px;  
}  
button[size="mini"] {
  display:inline-block; 
  padding: 2px 0px 5px 0px;
  width: 105px;
  height: 30px;
  font-size:12px;
  margin-top: 8px;
}
.loginBtn[type="primary"] {  
  width: 100%;  
  margin-top: 30px; 
  margin-bottom: 0px;
  background: #3798FB;
}